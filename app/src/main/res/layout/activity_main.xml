<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D2B2B"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <include
        android:id="@+id/dialog_product_layout"
        layout="@layout/dialog_product_layout"
        android:visibility="invisible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="99dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="49dp"
        android:background="#007367"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:text="Alarms"
        android:textColor="#E1DCDB"
        android:textColorHighlight="#616161"
        android:textColorHint="#DDC9C9"
        android:translationZ="4dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="99dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="49dp"
        android:background="@color/buttonOf"
        android:text="Products"
        android:textColor="#E1DCDB" />

    <Button
        android:id="@+id/button_additionProduct"
        android:layout_width="77dp"
        android:layout_height="20dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="86dp"
        android:background="#419144"
        android:text="Add new"
        android:textColor="#E1DCDB"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_additionShop"
        android:layout_width="77dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="86dp"
        android:layout_marginRight="30dp"
        android:background="#419144"
        android:text="Add new"
        android:textColor="#E1DCDB"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button3"
        android:layout_width="99dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="49dp"
        android:layout_marginRight="20dp"
        android:background="#007367"
        android:text="Shops"
        android:textColor="#E1DCDB" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="349dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:text="server: "
        android:textColor="#E1DCDB" />

    <TextView
        android:id="@+id/textCoord"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:text="coordinates: "
        android:textColor="#E1DCDB" />

    <TextView
        android:id="@+id/textLists"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:text="coordinates: "
        android:textColor="#E1DCDB" />


    <TextView
        android:id="@+id/tv_ALARM_Message"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="150dp"
        android:textColor="#F4C807"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageShopiMain"
        android:layout_width="210dp"
        android:layout_height="189dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal|center"
        android:visibility="visible"
        app:srcCompat="@drawable/loo" />


</FrameLayout>